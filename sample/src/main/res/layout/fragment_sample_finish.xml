<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dragContainer"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center">


    <Button
            android:id="@+id/pushScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Push Screen"
    />

    <Button
            android:id="@+id/finishAllButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Boom! (Close All)"
    />


    <Button
            android:id="@+id/toggleEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Toggle Enabled"
    />

    <TextView
            android:id="@+id/currentStatusTextView"
            android:layout_width="wrap_content" android:layout_height="wrap_content"

    />

</LinearLayout>